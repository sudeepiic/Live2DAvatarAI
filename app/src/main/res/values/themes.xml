<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Status bar color. -->
    <style name="Base.Theme.Live2DAvatarAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- For modern devices, make it truly black -->
        <item name="android:windowBackground">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <!-- Fullscreen theme that hides status bar -->
    <style name="Theme.Live2DAvatarAI.Fullscreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="Theme.Live2DAvatarAI" parent="Theme.Live2DAvatarAI.Fullscreen" />
</resources>
